{
  "info": {
    "_postman_id": "pacientes-api-collection",
    "name": "Pacientes API - Gestions",
    "description": "Colección Postman con las principales peticiones para el microservicio de Pacientes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{jwt_token}}", "type": "string" }
    ]
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8082" },
    { "key": "jwt_token", "value": "" }
  ],
  "item": [
    {
      "name": "Crear Paciente",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"numeroDocumento\": \"12345678\",\n  \"tipoDocumento\": \"CC\",\n  \"informacionPersonal\": {\n    \"primerNombre\": \"Juan\",\n    \"segundoNombre\": \"Carlos\",\n    \"primerApellido\": \"Pérez\",\n    \"segundoApellido\": \"Gómez\",\n    \"fechaNacimiento\": \"1990-01-15\",\n    \"genero\": \"M\"\n  },\n  \"informacionContacto\": {\n    \"telefono\": \"+57 300 123 4567\",\n    \"direccion\": \"Calle 123 #45-67\",\n    \"ciudad\": \"Bogotá\"\n  },\n  \"informacionMedica\": {\n    \"eps\": \"MiEPS\"\n  }\n}"
        },
        "url": { "raw": "{{base_url}}/api/pacientes", "host": ["{{base_url}}"], "path": ["api","pacientes"] }
      }
    },
    {
      "name": "Actualizar Paciente",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{ \"informacionContacto\": { \"telefono\": \"+57 300 999 8888\" } }" },
        "url": { "raw": "{{base_url}}/api/pacientes/:id", "host": ["{{base_url}}"], "path": ["api","pacientes",":id"] }
      }
    },
    {
      "name": "Obtener Paciente por ID",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/:id", "host": ["{{base_url}}"], "path": ["api","pacientes",":id"] } }
    },
    {
      "name": "Obtener Paciente por Documento",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/documento/:numeroDocumento", "host": ["{{base_url}}"], "path": ["api","pacientes","documento",":numeroDocumento"] } }
    },
    {
      "name": "Listar Pacientes Activos (pag)",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes", "host": ["{{base_url}}"], "path": ["api","pacientes"], "query": [ { "key": "page", "value": "0" }, { "key": "size", "value": "20" } ] } }
    },
    {
      "name": "Buscar por Nombre",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/buscar/nombre?nombre=Juan", "host": ["{{base_url}}"], "path": ["api","pacientes","buscar","nombre"], "query": [ { "key": "nombre", "value": "Juan" } ] } }
    },
    {
      "name": "Buscar por EPS",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/buscar/eps?eps=MiEPS", "host": ["{{base_url}}"], "path": ["api","pacientes","buscar","eps"], "query": [ { "key": "eps", "value": "MiEPS" } ] } }
    },
    {
      "name": "Buscar por Edad",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/buscar/edad?edadMinima=20&edadMaxima=40", "host": ["{{base_url}}"], "path": ["api","pacientes","buscar","edad"], "query": [ { "key": "edadMinima", "value": "20" }, { "key": "edadMaxima", "value": "40" } ] } }
    },
    {
      "name": "Desactivar Paciente",
      "request": { "method": "DELETE", "url": { "raw": "{{base_url}}/api/pacientes/:id", "host": ["{{base_url}}"], "path": ["api","pacientes",":id"] } }
    },
    {
      "name": "Reactivar Paciente",
      "request": { "method": "PATCH", "url": { "raw": "{{base_url}}/api/pacientes/:id/reactivar", "host": ["{{base_url}}"], "path": ["api","pacientes",":id","reactivar"] } }
    },
    {
      "name": "Existe por Documento",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/existe/:numeroDocumento", "host": ["{{base_url}}"], "path": ["api","pacientes","existe",":numeroDocumento"] } }
    },
    {
      "name": "Estadisticas",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/pacientes/estadisticas", "host": ["{{base_url}}"], "path": ["api","pacientes","estadisticas"] } }
    }
  ]
}
